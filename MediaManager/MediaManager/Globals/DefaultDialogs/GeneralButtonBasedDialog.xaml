<Window x:Class="MediaManager.Globals.DefaultDialogs.GeneralButtonBasedDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediaManager.Globals.DefaultDialogs"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStyle="None"
        BorderThickness="4"
        
        MouseDown="Window_MouseDown">
    <DockPanel>
        <StackPanel x:Name="headerContainer" DockPanel.Dock="Top">
            <TextBlock x:Name="header" HorizontalAlignment="Center" Margin="4" TextWrapping="WrapWithOverflow"/>
            <Border x:Name="headerBorder"/>
        </StackPanel>
        <StackPanel x:Name="buttonContainer" DockPanel.Dock="Bottom" HorizontalAlignment="Center" Orientation="Horizontal" Margin="8"/>
        <TextBlock x:Name="mainText" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Justify" Margin="4" TextWrapping="WrapWithOverflow"/>
    </DockPanel>
</Window>

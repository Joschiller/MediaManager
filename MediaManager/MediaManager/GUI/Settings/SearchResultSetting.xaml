<UserControl x:Class="MediaManager.GUI.Settings.SearchResultSetting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MediaManager.GUI.Settings" xmlns:atoms="clr-namespace:MediaManager.GUI.Atoms"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{StaticResource settingsLabelWidth}"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="searchResultLabel" Grid.Column="0" Style="{StaticResource leftsideLabel}"/>
        <atoms:NumericUpDown x:Name="searchResultValue" Grid.Column="1" StepPerScroll="1"/>
    </Grid>
</UserControl>

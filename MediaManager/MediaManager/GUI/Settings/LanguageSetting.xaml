<UserControl x:Class="MediaManager.GUI.Settings.LanguageSetting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MediaManager.GUI.Settings"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{StaticResource settingsLabelWidth}"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="languageText" Grid.Column="0" VerticalAlignment="Center"/>
        <ComboBox x:Name="selectedLanguage" Grid.Column="1" ItemsSource="{Binding LanguageList}" SelectionChanged="selectedLanguage_SelectionChanged"/>
    </Grid>
</UserControl>

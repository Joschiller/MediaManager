<UserControl x:Class="MediaManager.GUI.Controls.MultiUseTabs.TitleOfTheDay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MediaManager.GUI.Controls.MultiUseTabs" xmlns:wpfcomponents="clr-namespace:WPFComponents;assembly=WPFComponents"
             mc:Ignorable="d">
    <DockPanel Margin="{StaticResource defaultMarginSmall}">
        <DockPanel DockPanel.Dock="Top">
            <wpfcomponents:ImageButton x:Name="next" DockPanel.Dock="Right" EnabledIconSource="../../../Resources/next_random.png" Click="next_Click" Size="32" HorizontalAlignment="Right" VerticalAlignment="Top"/>
            <TextBlock x:Name="title" FontSize="{StaticResource fontSize_subTitle}" TextWrapping="WrapWithOverflow"/>
        </DockPanel>
        <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
            <TextBlock x:Name="description" TextAlignment="Justify" TextWrapping="WrapWithOverflow"/>
        </ScrollViewer>
    </DockPanel>
</UserControl>

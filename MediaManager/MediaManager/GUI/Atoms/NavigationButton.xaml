<UserControl x:Class="MediaManager.GUI.Atoms.NavigationButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MediaManager.GUI.Atoms"
             mc:Ignorable="d" Height="48" Width="48">
    <Button x:Name="btn" ToolTip="{Binding Tooltip}" Click="Button_Click" Background="Transparent" BorderBrush="Transparent">
        <Image Source="{Binding IconSource}"/>
    </Button>
</UserControl>

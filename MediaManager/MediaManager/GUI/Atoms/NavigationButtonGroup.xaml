<UserControl x:Class="MediaManager.GUI.Atoms.NavigationButtonGroup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MediaManager.GUI.Atoms"
             mc:Ignorable="d">
    <StackPanel Orientation="{Binding Orientation}">
        <Border BorderBrush="{StaticResource accent_border_brush}" BorderThickness="0.5" Margin="2"/>
        <StackPanel x:Name="container" Orientation="{Binding Orientation}"/>
        <Border BorderBrush="{StaticResource accent_border_brush}" BorderThickness="0.5" Margin="2"/>
    </StackPanel>
</UserControl>

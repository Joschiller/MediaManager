<UserControl x:Class="MediaManager.GUI.Components.Pager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MediaManager.GUI.Components" xmlns:atoms="clr-namespace:MediaManager.GUI.Atoms"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="page" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" TextAlignment="Center" VerticalAlignment="Bottom"/>
        <atoms:ImageButton x:Name="prev" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left" Size="24" Click="prev_Click" EnabledIconSource="../../Resources/previous.png" DisabledIconSource="../../Resources/noprevious.png"/>
        <atoms:ImageButton x:Name="next" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right" Size="24" Click="next_Click" EnabledIconSource="../../Resources/next.png" DisabledIconSource="../../Resources/nonext.png"/>
    </Grid>
</UserControl>

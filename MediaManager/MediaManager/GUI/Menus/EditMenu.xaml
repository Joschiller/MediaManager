<Window x:Class="MediaManager.GUI.Menus.EditMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediaManager.GUI.Menus" xmlns:components="clr-namespace:MediaManager.GUI.Components" xmlns:atoms="clr-namespace:MediaManager.GUI.Atoms" xmlns:edit="clr-namespace:MediaManager.GUI.Controls.Edit"
        mc:Ignorable="d"
        Style="{StaticResource defaultWindow}">
    <DockPanel>
        <components:NavigationBar DockPanel.Dock="Top" Mode="WithBackButton,WithHelpButton" BackClicked="NavigationBar_BackClicked" HelpClicked="NavigationBar_HelpClicked">
            <atoms:NavigationButtonGroup Visibility="{DynamicResource viewerButtonsVisibility}">
                <atoms:ImageButton Size="48" EnabledIconSource="../../Resources/delete_medium.png" ToolTip="{DynamicResource btnDeleteMedium}" Click="btnDeleteMediumClick"/>
                <atoms:ImageButton Size="48" EnabledIconSource="../../../Resources/edit_blue.png" ToolTip="{DynamicResource btnEditMedium}" Click="btnEditMediumClick" />
            </atoms:NavigationButtonGroup>
            <atoms:NavigationButtonGroup Visibility="{DynamicResource editorButtonsVisibility}">
                <atoms:ImageButton Size="48" EnabledIconSource="../../Resources/undo.png" ToolTip="{DynamicResource btnUndoChanges}" Click="btnUndoChangesClick"/>
                <atoms:ImageButton Size="48" EnabledIconSource="../../../Resources/save.png" DisabledIconSource="../../../Resources/nosave.png" ToolTip="{DynamicResource btnSaveMedium}" Click="btnSaveMediumClick" />
            </atoms:NavigationButtonGroup>
        </components:NavigationBar>
        <Border DockPanel.Dock="Top" BorderBrush="{StaticResource accent_border_brush}" BorderThickness="0.5" Margin="2"/>
        <Grid>
            <edit:MediaViewer x:Name="viewer"/>
            <edit:MediaEditor x:Name="editor" MediumEdited="editor_MediumEdited"/>
        </Grid>
    </DockPanel>
</Window>
